<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Nota</h3>
        </div>
        <div class="card-body">
            <form action="/nota/editar/{{nota._id}}?_method=put" method="post">
                <input type="hidden" name="_method" value="put">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Titulo" name="Title" value="{{nota.title}}"autofocus />
                </div>
                <div class="input-group mb-3">
                    <textarea placeholder="Descripcion" name="Description" id="" class="form-control">{{nota.description}}</textarea>
                </div>
                <div class="input-group mb-3">
                    <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>


</div>